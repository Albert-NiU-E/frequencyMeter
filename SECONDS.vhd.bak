LIBRARY IEEE
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;

ENTITY SECONDS IS
PORT (
		SECONS    : OUT STD_LOGIC;
		CLK       : IN  STD_LOGIC
		); 
END SECONDS;

ARCHITECTURE ARCHITECTURE_SECONDS OF SECONDS IS

BEGIN
	PROCESS(CLK)--200Hz分频
	VARIABLE COUNT_DIV:INTEGER:=0;
	BEGIN
		IF(CLK'EVENT AND CLK = '1') THEN
			COUNT_DIV:=COUNT_DIV + 1;
			IF(COUNT<25000001) THEN F6 <= '1';
			ELSIF(COUNT_DIV < 50000001) THEN 
				F6 <= '0';
			ELSE COUNT_DIV:=0;
			END IF;
		END IF;
	END PROCESS;
END ARCHITECTURE_SECONDS